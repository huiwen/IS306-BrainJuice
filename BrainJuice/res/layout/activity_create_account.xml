<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="306dp"
        android:text="Profile Picture" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_x="231dp"
        android:layout_y="12dp"
        android:src="@drawable/brainjuice" />

    <TextView
        android:id="@+id/TextSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="7dp"
        android:layout_y="22dp"
        android:text="Sign Up!"
        android:textColor="#ff000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="101dp"
        android:text="Username" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="183dp"
        android:text="Confirm Password" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="142dp"
        android:text="Password" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="224dp"
        android:text="Email" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="265dp"
        android:text="Date of Birth" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_x="163dp"
        android:layout_y="302dp"
        android:src="@drawable/signup" />

    <EditText
        android:id="@+id/Username"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_x="150dp"
        android:layout_y="93dp"
        android:background="@drawable/back"
        android:ems="10"
        android:lines="1" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_x="150dp"
        android:layout_y="135dp"
        android:background="@drawable/back"
        android:ems="10"
        android:inputType="textPassword"
        android:lines="1" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_x="150dp"
        android:layout_y="178dp"
        android:background="@drawable/back"
        android:ems="10"
        android:inputType="textPassword"
        android:lines="1" />

    <EditText
        android:id="@+id/DOB"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_x="150dp"
        android:layout_y="260dp"
        android:background="@drawable/back"
        android:ems="10"
        android:inputType="date"
        android:lines="1" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_x="150dp"
        android:layout_y="218dp"
        android:background="@drawable/back"
        android:ems="10"
        android:lines="1" />

    <ImageButton
        android:id="@+id/Confirm"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_x="47dp"
        android:layout_y="408dp"
        android:src="@drawable/confirm" />

    <ImageButton
        android:id="@+id/Cancel"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_x="180dp"
        android:layout_y="407dp"
        android:src="@drawable/cancel" />

</AbsoluteLayout>
