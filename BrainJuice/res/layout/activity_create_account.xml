<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="306dp"
        android:text="Profile Picture" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="70dp"
        android:layout_height="65dp"
        android:layout_x="231dp"
        android:layout_y="12dp"
        android:src="@drawable/brainjuice" />

    <EditText
        android:id="@+id/Username"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_x="156dp"
        android:layout_y="88dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ConfirmPassword"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_x="156dp"
        android:layout_y="170dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_x="156dp"
        android:layout_y="211dp"
        android:ems="10" />

    <EditText
        android:id="@+id/DOB"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_x="156dp"
        android:layout_y="252dp"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/TextSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="7dp"
        android:layout_y="22dp"
        android:text="Sign Up!"
        android:textColor="#ff000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="101dp"
        android:text="Username" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="183dp"
        android:text="Confirm Password" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="142dp"
        android:text="Password" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_x="156dp"
        android:layout_y="129dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="224dp"
        android:text="Email" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="23dp"
        android:layout_y="265dp"
        android:text="Date of Birth" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_x="163dp"
        android:layout_y="302dp"
        android:src="@drawable/signup" />

    <Button
        android:id="@+id/Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="57dp"
        android:layout_y="400dp"
        android:text="Confirm" />

    <Button
        android:id="@+id/Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="189dp"
        android:layout_y="400dp"
        android:text="Cancel" />

</AbsoluteLayout>
